<div class="generator-container">
    <div class="header">
        <h2>Recipe AI</h2>
        <p>Generate recipes from your pantry items.</p>
    </div>

    <button id="generate-btn" class="generate-btn">
        <span class="btn-text">Generate Recipes</span>
        <span id="loader" class="loader hidden"></span>
    </button>

    <div id="recipe-output" class="recipe-output hidden"></div>
</div>

<script>
    import { supabase } from "../lib/supabaseClient";

    const generateBtn = document.getElementById(
        "generate-btn",
    ) as HTMLButtonElement;
    const btnText = document.querySelector(".btn-text") as HTMLElement;
    const loader = document.getElementById("loader") as HTMLElement;
    const output = document.getElementById("recipe-output") as HTMLElement;

    generateBtn.addEventListener("click", async () => {
        // 1. Get current pantry items
        setLoading(true);
        output.innerHTML = "";
        output.classList.add("hidden");
        output.classList.remove("error-msg");

        try {
            const {
                data: { user },
            } = await supabase.auth.getUser();
            if (!user) throw new Error("Not logged in");

            const { data: items, error } = await supabase
                .from("pantry_items")
                .select("name, quantity, expiration_date");

            if (error) throw error;
            if (!items || items.length === 0) {
                alert("Your pantry is empty! Add items first.");
                setLoading(false);
                return;
            }

            // 2. Call API
            console.log("Client: Sending request to /api/generate-recipes");
            output.classList.remove("hidden");
            output.innerHTML = '<div class="thinking">Thinking...</div>';

            const response = await fetch("/api/generate-recipes", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ items }),
            });

            if (!response.ok) throw new Error("API Request Failed");
            if (!response.body) throw new Error("No response body");

            const reader = response.body.getReader();
            const decoder = new TextDecoder();

            let buffer = "";
            let renderedCount = 0;
            const recipes: any[] = [];

            while (true) {
                const { done, value } = await reader.read();
                if (done) break;

                const chunk = decoder.decode(value, { stream: true });
                buffer += chunk;

                // Attempt to find complete objects in the array stream
                // Matches content between { and } that looks like an object
                // We assume objects are comma separated
                const objectMatches = buffer.match(
                    /\{[\s\S]*?\}(?=,\s*|\s*\])/g,
                );

                if (objectMatches && objectMatches.length > renderedCount) {
                    // We found new objects!
                    if (renderedCount === 0) {
                        output.innerHTML = ""; // Clear "Thinking..."
                    }

                    for (let i = renderedCount; i < objectMatches.length; i++) {
                        try {
                            const recipe = JSON.parse(objectMatches[i]);
                            output.appendChild(createRecipeCard(recipe));
                            recipes.push(recipe);
                            renderedCount++;
                        } catch (e) {
                            // Incomplete or malformed JSON chunk, wait for more data
                            console.warn("Skipping incomplete JSON chunk");
                        }
                    }
                }
            }

            // Final safety check: if we somehow missed everything (e.g. single giant chunk)
            if (renderedCount === 0 && buffer.length > 0) {
                try {
                    const allRecipes = JSON.parse(buffer);
                    output.innerHTML = "";
                    allRecipes.forEach((r: any) =>
                        output.appendChild(createRecipeCard(r)),
                    );
                } catch (e) {
                    console.error("Final parse failed", e);
                }
            }
        } catch (err: any) {
            console.error("Error:", err);
            output.innerHTML = `<div class="error-content">Error: ${err.message}</div>`;
        } finally {
            setLoading(false);
        }
    });

    function createRecipeCard(recipe: any) {
        const details = document.createElement("details");
        const summary = document.createElement("summary");

        const h3 = document.createElement("h3");
        h3.textContent = recipe.name;

        const p = document.createElement("p");
        p.innerHTML = `<strong>Calories:</strong> ${recipe.calories} | <strong>Macros:</strong> ${recipe.macros}`;

        summary.appendChild(h3);
        summary.appendChild(p);
        details.appendChild(summary);

        const content = document.createElement("div");

        const h4Ing = document.createElement("h4");
        h4Ing.textContent = "Ingredients";
        content.appendChild(h4Ing);

        const ul = document.createElement("ul");
        recipe.ingredients.forEach((ing: string) => {
            const li = document.createElement("li");
            li.textContent = ing;
            ul.appendChild(li);
        });
        content.appendChild(ul);

        const h4Inst = document.createElement("h4");
        h4Inst.textContent = "Instructions";
        content.appendChild(h4Inst);

        const ol = document.createElement("ol");
        recipe.instructions.forEach((inst: string) => {
            const li = document.createElement("li");
            li.textContent = inst;
            ol.appendChild(li);
        });
        content.appendChild(ol);

        details.appendChild(content);
        return details;
    }

    function setLoading(isLoading: boolean) {
        if (isLoading) {
            generateBtn.disabled = true;
            btnText.textContent = "Generating...";
            loader.classList.remove("hidden");
        } else {
            generateBtn.disabled = false;
            btnText.textContent = "Generate Recipes";
            loader.classList.add("hidden");
        }
    }
</script>

<style>
    .generator-container {
        background:
            radial-gradient(
                circle at top right,
                rgba(100, 108, 255, 0.1),
                transparent 40%
            ),
            rgba(30, 30, 35, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 16px;
        /* min-height: 400px; */
        position: sticky;
        top: 2rem;
    }

    .hidden {
        display: none !important;
    }

    h2 {
        margin-top: 0;
        font-size: 1.8rem;
        background: linear-gradient(to right, #ffafbd, #ffc3a0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p {
        color: #a0a0a0;
        margin-bottom: 2rem;
    }

    .generate-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .generate-btn:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(118, 75, 162, 0.4);
    }

    .generate-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .loader {
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s linear infinite;
    }

    .recipe-output {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        line-height: 1.6;
        color: #e0e0e0;
    }

    /* Markdown Styles */
    .recipe-output :global(h1),
    .recipe-output :global(h2) {
        color: white;
        margin-top: 1.5rem;
    }
    .recipe-output :global(ul) {
        padding-left: 1.5rem;
    }
    .recipe-output :global(li) {
        margin-bottom: 0.5rem;
    }
    .recipe-output :global(strong) {
        color: #ffd700;
    }

    .recipe-output.error-msg {
        color: #ff6b6b;
        border-top-color: #ff6b6b;
    }

    .error-content {
        background: rgba(255, 0, 0, 0.1);
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid rgba(255, 0, 0, 0.2);
    }

    .thinking {
        color: #a0a0a0;
        font-style: italic;
        text-align: center;
        padding: 1rem;
    }

    /* Recipe Card Styles */
    .recipe-output :global(details) {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        margin-bottom: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .recipe-output :global(details[open]) {
        background: rgba(255, 255, 255, 0.07);
        outline: 1px solid rgba(136, 58, 234, 0.5);
    }

    .recipe-output :global(summary) {
        padding: 1rem 1.5rem;
        cursor: pointer;
        list-style: none; /* Hide default arrow */
        position: relative;
    }

    .recipe-output :global(summary::-webkit-details-marker) {
        display: none;
    }

    .recipe-output :global(summary:hover) {
        background: rgba(255, 255, 255, 0.03);
    }

    /* Custom Arrow */
    .recipe-output :global(summary::after) {
        content: "+";
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.5rem;
        font-weight: 300;
        color: #a0a0a0;
        transition: transform 0.3s;
    }

    .recipe-output :global(details[open] summary::after) {
        transform: translateY(-50%) rotate(45deg);
    }

    .recipe-output :global(summary h3) {
        margin: 0 0 0.5rem 0;
        color: white;
        font-size: 1.2rem;
    }

    .recipe-output :global(summary p) {
        margin: 0;
        color: #a0aec0;
        font-size: 0.9rem;
    }

    /* Content styling inside details (that isn't summary) */
    .recipe-output :global(details > *:not(summary)) {
        padding: 0 1.5rem 1.5rem 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        margin-top: 0.5rem;
        animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
